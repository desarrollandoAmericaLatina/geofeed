<div id="search">
  <%= form_for @search, :url => search_path, :html => {:meliod => :get} do |f| %>
    <%= f.label :tipo_institucion_contains , :style => 'color: black; margin-top: 1em; margin-bottom:1em; display: block;'%>
    <%= f.text_field :tipo_institucion_contains %><br />
    
    
    <!-- etc... -->
    
    <%= f.label :promedio_arancel_greater_than, 'Promedio Arancel entre:', :style => 'color: black; margin-top: 1em; margin-bottom:1em; display: block;' %>
    <div class="range">
      <div>
      <%= f.range_field :promedio_arancel_greater_than, {:min=>0,:max=>@max_range.to_s,:onchange=>'$("#arancel_gt_label").val(this.value);'} %>
      <input type="text" disabled="true" value="" id="arancel_gt_label" style="float:right;width:80px; font-size: 10pt ; height: 12pt"/>
      </div>
      <div>
      <%= f.range_field :promedio_arancel_less_than, {:min=>0,:max=>@max_range.to_s,:onchange=>'$("#arancel_lt_label").val(this.value);'} %>
      <input type="text" disabled="true" value="" id="arancel_lt_label" style="float:right;width:80px; font-size: 10pt ; height: 12pt" />
      </div>
    </div>
    <%= f.submit "Buscar", :style=>"clear:both; margin-right: 200px;margin-top:20px; height: 24pt;" %>
  <% end %>  
</div>
<div id="results">
  <h1></h1>
  <table id="rounded-corner">
    <thead>
    <tr>
      <!-- <th>Tipo institucion</th> -->
      <!-- <th>Carrera</th> -->
      <th class="top-left"><%= sort_link @search, :institucion %></th>
      <!-- <th>Areas conocimiento</th> -->
      <th><%= sort_link @search, :carrera %></th>
      <th><%= sort_link @search, :empleabilidad_primer_ano %></th>
      <th><%= sort_link @search, :empleabilidad_segundo_ano %></th>
      <!-- <th>Region mayor numero titulados</th> -->
      <!-- <th>N matriculados primer ano</th> -->
      <!-- <th>N matriculados total</th> -->
      <!-- <th>Estudiantes municipales</th> -->
      <!-- <th>Estudiantes particular subvencionado</th> -->
      <!-- <th>Estudiantes particular pagado</th> -->
      <th><%= sort_link @search, :porcentaje_estudiantes_psu %></th>
      <th><%= sort_link @search, :promedio_psu %></th>
      <th><%= sort_link @search, :promedio_nem %></th>
      <th><%= sort_link @search, :tasa_retencion_primer_ano %></th>
      <!-- <th><%= sort_link @search, :tasa_retencion_segundo_ano %></th> -->
      <th><%= sort_link @search, :n_titulados %></th>
      <th><%= sort_link @search, :duracion_esperada %> </th>
      <th><%= sort_link @search, :duracion_real %> </th>
      <th><%= sort_link @search, :promedio_arancel %></th>
      <th class="top-right"> <%= link_to 'GeoFeed', '#geofeedimg' ,:class => 'fancy_box' %> 
                                 <div style="display:none">
                                   <div id="geofeedimg">
                                    <%= image_tag @map_feed_url  %>
                                  </div>
                                 </div> </th>
    </tr>
    </thead>
  <% @careers.each do |career| %>
    <tr class="<%= cycle("even", "odd") %>">
      <!-- <td><%= career.tipo_institucion %></td> -->
      <td><%= career.institucion.titleize %></td>
      <td><%= career.carrera %></td>
      <!-- <td><%= career.areas_conocimiento %></td> -->
      <td><%= number_to_percentage(career.empleabilidad_primer_ano, :precision => 0) %></td>
      <td><%= number_to_percentage(career.empleabilidad_segundo_ano, :precision => 0) %></td>
      <!-- <td><%= career.region_mayor_numero_titulados %></td> -->
      <!-- <td><%= career.n_matriculados_primer_ano %></td> -->
      <!-- <td><%= career.n_matriculados_total %></td> -->
      <!-- <td><%= career.estudiantes_municipales %></td> -->
      <!-- <td><%= career.estudiantes_particular_subvencionado %></td> -->
      <!-- <td><%= career.estudiantes_particular_pagado %></td> -->
      <td><%= career.porcentaje_estudiantes_psu 	%></td>
      <td><%= career.promedio_psu %></td>
      <td><%= number_with_delimiter(career.promedio_nem, :separator => ",") %></td>
      <td><%= number_to_percentage(career.tasa_retencion_primer_ano, :precision => 0) %></td>
      <!--<td><%= number_to_percentage(career.tasa_retencion_segundo_ano, :precision => 0) %></td>-->
      <td><%= career.n_titulados %></td>
      <td><%= number_with_precision(career.duracion_esperada,:precision => 0) %></td>
      <td><%= career.duracion_real %></td>
      <td><%= number_to_currency(career.promedio_arancel, :delimiter => ".", :precision => 0) %></td>
      <td><%= link_to 'Mapa', "#geofeedrow#{career.id}", :class=> 'fancy_box' %>
                                 <div style="display:none">
                                   <div id="geofeedrow<%= career.id%>">
                                    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=512x512&markers=size:mid|color:red|#{career.direccion_casa_central}&mobile=true&sensor=false"  %>
                                  </div>
                                 </div>

</td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Career', new_career_path %>
  

</div>
